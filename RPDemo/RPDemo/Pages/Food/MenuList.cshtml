@page
@model RPDemo.Pages.Food.MenuListModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr> <!--ROW-->
            <th> Title </th> <!--COLUMNS insde the row for headers-->
            <th> Description </th>
            <th> Price </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Food)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@string.Format("{0:C}", item.Price)</td>
            </tr>
        }
    </tbody>
</table>

