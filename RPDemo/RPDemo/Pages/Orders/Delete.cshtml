@page
@model RPDemo.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model.Order is null) // 'is null' is the same as '== null'
{
        <h4>The requested record was not found.</h4>
}
else
{
    <div class="h4"> <!--feature of bootstrap to get the h4 size, but is not part of the html header hierarchy as part of the table of html contents-->
            Are you sure you want to delete the order you placed on @Model.Order.OrderDate?
    </div>
    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden"/>
        <div class="form-group">
            <input type="submit" value="Delete Order" class="btn btn-danger"/>
        </div>
    </form>
}